<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#008080"
        />
    <include
        android:id="@+id/toolbar"
        layout="@layout/action_bar"/>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>



    <com.github.captain_miao.optroundcardview.OptRoundCardView
        android:id="@+id/optroundcardview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:optRoundCardBackgroundColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/imageview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearlayout"
        app:optRoundCardElevation="0dp"
        app:optRoundCardLeftTopCorner="true"
        app:optRoundCardRightTopCorner="true"
        app:optRoundCardLeftBottomCorner="false"
        app:optRoundCardRightBottomCorner="false"
        app:optRoundCardCornerRadius="60dp"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:layout_marginTop="45dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="#008080"
                    />

                <EditText
                    android:id="@+id/ed_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:drawableRight="@drawable/email"
                    android:drawableTint="#008080"
                    android:textSize="17dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginRight="30dp"
                    android:hint="Email"
                    android:background="@android:color/transparent"
                    android:textColorHint="#008080"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:background="#5a5a5a"/>
                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:drawableRight="@drawable/lock"
                    android:drawableTint="#008080"
                    android:inputType="textPassword"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="Password"
                    android:textSize="17dp"
                    android:background="@android:color/transparent"
                    android:textColorHint="#008080"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:background="#5a5a5a"/>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/btn_bg"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#008080"
                    android:text="Login"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="30dp"
                    android:text="----OR----"
                    android:textColor="#008080"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <com.github.captain_miao.optroundcardview.OptRoundCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:optRoundCardLeftTopCorner="true"
                    app:optRoundCardRightTopCorner="true"
                    app:optRoundCardLeftBottomCorner="false"
                    app:optRoundCardRightBottomCorner="true"
                    app:optRoundCardCornerRadius="100dp"
                    app:optRoundCardBackgroundColor="#008080">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tv_signin"
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New user? sign up"
                            android:textSize="12dp"
                            android:clickable="true"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"/>
                        <TextView
                            android:id="@+id/tv_reset"
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forget Password?"
                            android:textSize="12dp"
                            android:clickable="true"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"/>
                            />

                    </LinearLayout>
                </com.github.captain_miao.optroundcardview.OptRoundCardView>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </com.github.captain_miao.optroundcardview.OptRoundCardView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/icon_user"
        app:layout_constraintBottom_toTopOf="@id/optroundcardview"
        app:layout_constraintEnd_toEndOf="@id/imageview"
        app:layout_constraintStart_toStartOf="@id/imageview"
        app:layout_constraintTop_toTopOf="@id/optroundcardview"
        >
    </de.hdodenhof.circleimageview.CircleImageView>
</androidx.constraintlayout.widget.ConstraintLayout>